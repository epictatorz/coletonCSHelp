void sumArray(int mtrx1[row][column], int mtrx2[row][column])
{
	int fmtrx[row][column];

	for(int i = 0; i < row; i++)
	{
		for (int c = 0; n < column; n++)
		fmtrx[i][n] = mtrx1[i][n] + mtrx1[i][n];
	}
}

